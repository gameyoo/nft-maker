{
  "compilerOptions": {
    "lib": [
      "es5",
      "es6",
      "es7"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "target": "es2017",
    "alwaysStrict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },

  "exclude": [
    "node_modules"
  ]
}